<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Composer"
        android:id="@+id/composer_edit"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Opus"
        android:layout_below="@id/composer_edit"
        android:inputType="number"
        android:id="@+id/opus_edit"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="No."
        android:inputType="number"
        android:layout_toRightOf="@id/opus_edit"
        android:layout_below="@id/composer_edit"
        android:layout_marginLeft="8dp"
        android:id="@+id/no_edit"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opus_edit"
        android:id="@+id/name_edit"
        android:hint="Name"/>
    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/composer_edit"
        android:background="@drawable/cancel"
        android:id="@+id/cancel_button" />
    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:id="@+id/addbutton"
        android:layout_marginTop="122dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/name_edit" />

</RelativeLayout>